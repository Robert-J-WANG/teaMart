@model teaMart.Models.ImageChart

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_BackLayout.cshtml";
}

<h3>Edit Image</h3>

<div class="btn btn-primary">
    <a asp-action="Index" style="text-decoration:none; color:azure">Back to List</a>
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" onsubmit="return checkForm()" id="myForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* 跳转地址 *@
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>

            @* 上传图片 *@
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input type="file" id="pic" name="pic" class="form-control" accept="image/*" onchange="upload(this)">
                <!-- 隐藏域用于保存上传后图片的路径，提交到后端 -->
                <input type="hidden" name="ImageUrl" id="img" value="@Model.ImageUrl" required />
                <!-- 显示上传后的图片预览 -->
                <div id="showImg">
                    <img src="@Model.ImageUrl" width="100" height="100" />
                </div>
            </div>

            @* 创建时间 *@
            <div class="form-group">
                <input type="hidden" name="createtime" value="@Model.Createtime" />
                <input type="hidden" name="id" value="@Model.Id" />
            </div>

            @* 状态 *@
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <select asp-for="State" class="form-control">
                    @if (Model.State==1)
                    {
                        <option value="1">Showing</option>
                        <option value="0">Hidden</option>
                    }
                    else
                    {
                        <option value="0">Hidden</option>
                        <option value="1">Showing</option>
                    }
                </select>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


